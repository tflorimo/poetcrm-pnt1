@model PoetCRM.Models.Especialidad

@{
    ViewData["Title"] = "Editar";
}

<h1>Edición de Especialidad Médica</h1>

<h4>@Html.DisplayNameFor(model => model.NombreEspecialidad)</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEspecialidad" />
            <div class="form-group">
                <label asp-for="NombreEspecialidad" class="control-label"></label>
                <input asp-for="NombreEspecialidad" class="form-control" />
                <span asp-validation-for="NombreEspecialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
