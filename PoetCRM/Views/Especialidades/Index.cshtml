@model IEnumerable<PoetCRM.Models.Especialidad>

@{
    ViewData["Title"] = "Especialidades";
}

<h1>Listado de Especialidades</h1>

<p>
    <a asp-action="Create">Agregar nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreEspecialidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEspecialidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEspecialidad">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdEspecialidad">Ver detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEspecialidad">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
